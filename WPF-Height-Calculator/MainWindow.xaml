<Window x:Class="WPF_Height_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Height_Calculator"
        mc:Ignorable="d"
        Title="Height Calculator" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="73*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="HeightTextBox" Grid.Column="1" HorizontalAlignment="Left" Margin="208,0,0,0" Text="Enter your height in cm" TextWrapping="Wrap" VerticalAlignment="Center" Width="244" Height="70" TextAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Button x:Name="CalculateButton" Content="Calculate" Grid.Column="1" HorizontalAlignment="Left" Margin="268,268,0,0" VerticalAlignment="Top" Width="124" Click="CalculateButton_Click"/>

    </Grid>
</Window>
